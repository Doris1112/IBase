<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <com.doris.ibase.widget.ILoadingView
        android:id="@+id/i_loading_load_more"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        app:round_inside_color="@color/i_load_more_loading_view_inside"
        app:round_outside_color="@color/i_load_more_loading_view_outside" />

    <TextView
        android:id="@+id/i_tv_load_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:text="@string/i_load_more"
        android:textColor="@color/i_gray_6"
        android:textSize="@dimen/sp14" />
</LinearLayout>